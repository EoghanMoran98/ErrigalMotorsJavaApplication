    private void btnLoginActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnLoginActionPerformed
          /**
           * When an email and password provided in the text field match a record in
           * the database, a new user object is created. A result set is generated for 
           * that user using the method loadUser. This result set is used throughout the program
           * to maintain a logged in session
           */
        setConnection();
        user1 = DatabaseConnection.loadUser(txtEmail.getText(), String.valueOf(passPassword.getPassword())); // looking for this account
        if (user1 != null) {
            JOptionPane.showMessageDialog(null, "User Logged In");

            new frHome().setVisible(true);
        }//if
        else {
            JOptionPane.showMessageDialog(null, "Incorrect Username or Password");
        } //else 


    }//GEN-LAST:event_btnLoginActionPerformed

    private void btnRegisterActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnRegisterActionPerformed
        /**
         * The button will take the user to the form frSignUp where they can create a new account
         */
        this.setVisible(false);
        AppData.frSignUpScreen.setVisible(true);
    }//GEN-LAST:event_btnRegisterActionPerformed

    private void formWindowClosed(java.awt.event.WindowEvent evt) {//GEN-FIRST:event_formWindowClosed
        AppData.frHomeScreen.setVisible(true);
        this.dispose();
    }//GEN-LAST:event_formWindowClosed

    private void togPassRevealActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_togPassRevealActionPerformed
        /**
         * This button is a toggle to reveal the Password characters, or toggle
         * them back to '*'
         */

        // Code for revealing and hiding password
        if (togPassReveal.isSelected()) {
            passPassword.setEchoChar((char) 0);
        } else {
            passPassword.setEchoChar('*');
        }
    }//GEN-LAST:event_togPassRevealActionPerformed

